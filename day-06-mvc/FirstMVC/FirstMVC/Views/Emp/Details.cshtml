@model IEnumerable<FirstMVC.Models.EmployeeModel>

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_FirstLayout.cshtml";
}

<h2>Details</h2>

<p>
    <span class="btn btn-secondary text-white">  @Html.ActionLink("Create New", "Create") </span>
</p>


@section mySideBar{
    <h2>Section for employee details</h2>
    <br />
    <h3>No. of empoyee : @ViewBag.no</h3>

}

<table class="table table-dark table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                <span class="btn btn-secondary text-white">@Html.ActionLink("Edit", "Edit", new { id = item.ID })</span>

                <span class="btn btn-secondary text-white">@Html.ActionLink("Details", "Details", new { id = item.ID })</span>

                <span class="btn btn-secondary text-white">@Html.ActionLink("Delete", "Delete", new { id = item.ID })</span>
            </td>
        </tr>
    }

</table>
