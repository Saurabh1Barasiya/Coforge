
@{
    Layout = null;
}
@model Update_and_search_in_MVC.Models.Stu
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SUdata</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</head>
<body>
    <div class="container"> 
        <form action="/StudentUpdateSearch/SUdata" method="post" class="mt-4">
            <div class="row">
                <div class="col-md-6 mt-2">
                    <input type="text" class="form-control" placeholder="Sid" aria-label="Sid" name="Sid" value="@Model.Sid">
                </div>
                <div class="col-md-6  mt-2">
                     <input type="submit" name="cbutton" value="Search" class="btn btn-primary" />
                        @ViewBag.searchResult
                </div>
                
            </div>

            <div class="row">
                <div class="col-md-6  mt-2">
                    <input type="text" class="form-control" placeholder="SFname" aria-label="SFname" id="SFname" name="SFname" value="@Model.SFname">
                </div>
             </div>

            <div class="row">
                <div class="col-md-6  mt-2">
                    <input type="text" class="form-control" placeholder="SLname" aria-label="SLname" id="SLname" name="SLname" value="@Model.SLname">
                </div>
            </div>


            <div class="row">
                <div class="col-md-6  mt-2">
                    <input type="text" class="form-control" placeholder="Scity" aria-label="Scity" id="Scity" name="Scity" value="@Model.Scity">
                </div>
                </div>

            <div class="row">
                <div class="col-md-6  mt-2">
                    <input type="submit" name="cbutton" value="Update" class="btn btn-primary" />
                </div>
                </div>

                @ViewBag.updateResult
           
        </form>
    </div>
</body>
</html>
